<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/texto_escoger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escoge el deporte"
        />
    <Button
        android:id="@+id/statsByDate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:visibility="gone"
        android:text="Enviar"
        android:onClick="statsByDate"
        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:stretchMode="columnWidth">
    <Spinner
        android:id="@+id/spinneropcs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/opciones">
    </Spinner>
        <Button
            android:id="@+id/submitbuton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="AÃ±adir"
            android:onClick="sendActivity"
            />
    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
    <TextView
        android:id="@+id/escogefecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escoge la fecha de inicio"
        />
    <DatePicker
        android:id="@+id/begindate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner">
    </DatePicker>
    <DatePicker
        android:id="@+id/enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:visibility="gone">
    </DatePicker>
        <Switch
            android:id="@+id/simpleSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textOff="Inicio"
            android:textOn="Fin"/>
    </LinearLayout>

</LinearLayout>
