<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eus.ehu.tta.mugikirolapp_android.SportsActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/menu_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:text="@string/Bienvenida" />
    <TextView
        android:id="@+id/frase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Escoge el deporte"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hockey"
        android:tag="0"
        android:onClick="gotoSport"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baloncesto"
        android:tag="1"
        android:onClick="gotoSport"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Balonmano"
        android:tag="2"
        android:onClick="gotoSport"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volley"
        android:tag="3"
        android:onClick="gotoSport"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ±adir actividad"
        android:onClick="addActivity"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver actividades"
        android:onClick="seeActivities"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</LinearLayout>
